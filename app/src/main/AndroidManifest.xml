<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aurora.d20_35_app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.D2035appActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.D2035appActivity" />
        </activity>
        <activity
            android:name=".views.DMActivity"
            android:parentActivityName=".views.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.MainMenuActivity" />
        </activity>
        <activity
            android:name=".views.PlayerCharactersListActivity"
            android:parentActivityName=".views.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.MainMenuActivity" />
        </activity>
        <activity
            android:name=".views.RulesActivity"
            android:parentActivityName=".views.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.MainMenuActivity" />
        </activity>
        <activity
            android:name=".fragments.D2035appContentFragment"
            android:parentActivityName=".views.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.MainMenuActivity" />
        </activity>
        <activity
            android:name=".views.SettingsActivity"
            android:parentActivityName=".views.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.MainMenuActivity" />
        </activity>
        <activity
            android:name=".views.HelpActivity"
            android:parentActivityName=".views.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.MainMenuActivity" />
        </activity>
        <activity
            android:name=".views.DatabasesActivity"
            android:parentActivityName=".views.MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.MainMenuActivity" />
        </activity>
        <activity
            android:name=".views.DatabasesListItemDetailActivity"
            android:parentActivityName=".views.DatabasesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.DatabasesActivity" />
        </activity>
        <activity
            android:name=".views.PlayerCharacterActivity"
            android:parentActivityName=".views.PlayerCharactersListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aurora.d20_35_app.views.PlayerCharactersListActivity" />
        </activity>
        <activity android:name=".views.RulesDetailActivity" />
        <activity android:name=".views.PlayerCharactersListFrameItemDetailActivity" />
    </application>

</manifest>